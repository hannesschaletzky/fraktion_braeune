<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#fraktion1 {
  display: block;
  margin: 2rem auto 0 auto; /* centers horizontally */
  border-radius: 16px;
  max-width: 90%; /* fills screen better on mobile */
  max-height: 60vh;
	height: auto;
  object-fit: contain;
  box-shadow:
    0 10px 15px -3px rgba(0, 0, 0, 0.1),
    0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

/* Optional: adjust layout for smaller screens */
@media (max-width: 600px) {
  #fraktion1 {
    max-width: 95%;
    margin-top: 1.5rem;
  }
}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		min-height: 100vh;
		overflow-y: auto;
	}

	main {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 2rem 1rem;
		align-items: center;
	}

	h3 {
		text-align: center;
	}

	a {
		text-decoration: none;
		color: inherit; /* optional: keeps same text color as surrounding text */
	}

</style>
